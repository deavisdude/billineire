{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://villageoverhaul.example.com/schemas/contract.json",
  "title": "Village Contract",
  "description": "A contract issued by a village for players to complete",
  "type": "object",
  "required": ["id", "type", "objectives", "rewards", "issuerVillageId", "status"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique contract ID"
    },
    "type": {
      "type": "string",
      "enum": ["fetch", "defense", "dungeon"],
      "description": "Contract type"
    },
    "objectives": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["description", "completed"],
        "properties": {
          "description": {
            "type": "string"
          },
          "target": {
            "type": "string"
          },
          "quantity": {
            "type": "integer",
            "minimum": 1
          },
          "completed": {
            "type": "boolean"
          }
        }
      }
    },
    "rewards": {
      "type": "object",
      "required": ["currencyMillz"],
      "properties": {
        "currencyMillz": {
          "type": "integer",
          "minimum": 0
        },
        "items": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "reputationGain": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "timers": {
      "type": "object",
      "properties": {
        "startMillis": {
          "type": "integer"
        },
        "expiresMillis": {
          "type": "integer"
        }
      }
    },
    "issuerVillageId": {
      "type": "string"
    },
    "participants": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
      }
    },
    "status": {
      "type": "string",
      "enum": ["available", "accepted", "completed", "expired"],
      "description": "Contract lifecycle status"
    }
  }
}
